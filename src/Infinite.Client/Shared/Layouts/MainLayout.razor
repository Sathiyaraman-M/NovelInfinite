@inherits LayoutComponentBase
<MudThemeProvider @bind-IsDarkMode="AppearanceService.IsDarkMode" Theme="AppearanceService.AppTheme" />
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <MudAppBar Dense>
        <MudText Typo="Typo.h5">@ApplicationConstants.AppName</MudText>
        <MudButton Href="/" Color="Color.Inherit" StartIcon="@Icons.Material.Rounded.Home" Class="ml-4">
            Home
        </MudButton>
        <MudButton Href="/Personal" Color="Color.Inherit" StartIcon="@Icons.Material.Filled.MyLocation" Class="ml-2">
            Personal
        </MudButton>
        <MudButton Href="/Explore" Color="Color.Inherit" StartIcon="@Icons.Material.Filled.Explore" Class="ml-2">
            Explore
        </MudButton>
        <MudSpacer />
        <LoginDisplay />
    </MudAppBar>
    <MudMainContent>
        <MudContainer Class="pt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
