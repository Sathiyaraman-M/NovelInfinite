@inherits LayoutComponentBase
<MudThemeProvider @bind-IsDarkMode="AppearanceService.IsDarkMode" Theme="AppearanceService.AppTheme" />
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <MudAppBar Dense>
        <MudIconButton Icon="@Icons.Material.Rounded.Home" OnClick="@(() => NavigationManager.NavigateTo("/"))" 
                       Color="Color.Inherit" Edge="Edge.Start" />
        <MudText Typo="Typo.h5">@ApplicationConstants.AppName</MudText>
        <MudButton Href="/Explore" Color="Color.Inherit" StartIcon="@Icons.Material.Filled.Explore"
                   Class="ml-2">Explore</MudButton>
        <MudButton Href="/Manage-Account" Color="Color.Inherit" StartIcon="@Icons.Material.Filled.AccountCircle"
                   Class="ml-2">Manage Account</MudButton>
        <MudSpacer />
        <LoginDisplay />
    </MudAppBar>
    <MudMainContent>
        <MudContainer Class="pt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
