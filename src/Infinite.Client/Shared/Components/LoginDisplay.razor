@using System.Security.Claims
@using IdentityModel
@inject SignOutSessionStateManager SignOutManager

<AuthorizeView>
    <Authorized>
        <MudTooltip Text="Manage your account">
            <MudButton Color="Color.Inherit" Href="Personal/Manage" StartIcon="@Icons.Material.Filled.AccountCircle"
                       Class="mx-2">
                Hello, @(context.User.FindFirstValue(JwtClaimTypes.PreferredUserName))!
            </MudButton>
        </MudTooltip>
        <MudButton Color="Color.Inherit" OnClick="BeginSignOut">Log out</MudButton>
    </Authorized>
    <NotAuthorized>
        <MudLink Color="Color.Inherit" Href="authentication/login">Log in</MudLink>
    </NotAuthorized>
</AuthorizeView>

@code{
    private async Task BeginSignOut(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        NavigationManager.NavigateTo("authentication/logout");
    }
}